{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string"
    },
    "publicIPAddress": {
      "type": "string"
    },
    "vmNicName": {
      "type": "string"
    },
    "dependencyRef": {
      "type": "string"
    },
    "xapLookupLocators": {
      "type": "string"
    },
    "xapLicense": {
      "type": "securestring"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'), '/', 'XapMgtNodeExtension')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[parameters('dependencyRef')]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
           "fileUris": [
            "https://api.github.com/repos/xap/xap-docker/zipball"
           ],
           "commandToExecute": "[concat('sudo /bin/bash -c \"apt-get install unzip; unzip -jo zipball; echo ', variables('xapLicenseParam'), ' > xap-license.txt; docker build -t gigaspaces/xap:12.0.1 .; docker run --name ', parameters('vmName'),' -d --net=host -e XAP_LOOKUP_LOCATORS=', concat(reference(concat('Microsoft.Network/networkInterfaces/', parameters('vmNicName'))).ipConfigurations[0].properties.privateIPAddress, ':4174'), ' gigaspaces/xap:12.0.1 gsa.global.lus 0 gsa.lus 1 gsa.global.gsm 0 gsa.gsm 1 gsa.gsc 0\"')]"
        }
      }
    }
  ],
  "outputs": {
    "lookupLocator": {
      "type": "string",
      "value": "[concat(reference(concat('Microsoft.Network/networkInterfaces/', parameters('vmNicName'))).ipConfigurations[0].properties.privateIPAddress, ':4174')]"
    }
  }
}
